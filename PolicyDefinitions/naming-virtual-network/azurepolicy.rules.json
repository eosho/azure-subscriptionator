{
  "if" : {
    "allOf" : [
      {
        "field" : "type",
        "equals" : "Microsoft.Network/virtualNetworks"
      },
      {
        "not" : {
          "allOf" : [
            {
              "anyOf" : [
                {
                  "field" : "name",
                  "match" : "[resourceGroup().id]-VN-*"
                }
              ]
            },
            {
              "anyOf" : [
                {
                  "field" : "name",
                  "match" : "*-VN-."
                },
                {
                  "field" : "name",
                  "match" : "*-VN-.."
                },
                {
                  "field" : "name",
                  "match" : "*-VN-..."
                },
                {
                  "field" : "name",
                  "match" : "*-VN-...."
                },
                {
                  "field" : "name",
                  "match" : "*-VN-....."
                },
                {
                  "field" : "name",
                  "match" : "*-VN-......"
                },
                {
                  "field" : "name",
                  "match" : "*-VN-......."
                },
                {
                  "field" : "name",
                  "match" : "*-VN-........"
                }
              ]
            }
          ]
        }
      }
    ]
  },
  "then" : {
    "effect" : "[parameters('effect')]"
  }
}