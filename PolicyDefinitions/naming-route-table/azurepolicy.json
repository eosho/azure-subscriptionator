{
  "type" : "Microsoft.Authorization/policyDefinitions",
  "name" : "naming-route-table",
  "properties" : {
    "displayName" : "Naming of Azure route tables",
    "description" : "Naming of Azure route tables. Example route table name M-UKS-L01-MGMT01-RG-VNET-VN-CORE-SN-FRONTEND-RT",
    "metadata" : {
      "category" : "Naming"
    },
    "mode" : "All",
    "parameters" : {
      "effect" : {
        "type" : "string",
        "metadata" : {
          "displayName" : "effect",
          "description" : "Effect of policy, such as audit or deny"
        },
        "allowedValues" : [
          "Append",
          "Audit",
          "AuditIfNotExists",
          "Deny",
          "DeployIfNotExists",
          "Disabled"
        ]
      }
    },
    "policyRule" : {
      "if" : {
        "allOf" : [
          {
            "field" : "type",
            "equals" : "Microsoft.Network/routeTables"
          },
          {
            "not" : {
              "allOf" : [
                {
                  "anyOf" : [
                    {
                      "field" : "name",
                      "match" : "[resourceGroup().id]-VN-.-SN-*"
                    },
                    {
                      "field" : "name",
                      "match" : "[resourceGroup().id]-VN-..-SN-*"
                    },
                    {
                      "field" : "name",
                      "match" : "[resourceGroup().id]-VN-...-SN-*"
                    },
                    {
                      "field" : "name",
                      "match" : "[resourceGroup().id]-VN-....-SN-*"
                    },
                    {
                      "field" : "name",
                      "match" : "[resourceGroup().id]-VN-.....-SN-*"
                    },
                    {
                      "field" : "name",
                      "match" : "[resourceGroup().id]-VN-......-SN-*"
                    },
                    {
                      "field" : "name",
                      "match" : "[resourceGroup().id]-VN-.......-SN-*"
                    },
                    {
                      "field" : "name",
                      "match" : "[resourceGroup().id]-VN-........-SN-*"
                    }
                  ]
                },
                {
                  "anyOf" : [
                    {
                      "field" : "name",
                      "match" : "*-SN-.-RT"
                    },
                    {
                      "field" : "name",
                      "match" : "*-SN-..-RT"
                    },
                    {
                      "field" : "name",
                      "match" : "*-SN-...-RT"
                    },
                    {
                      "field" : "name",
                      "match" : "*-SN-....-RT"
                    },
                    {
                      "field" : "name",
                      "match" : "*-SN-.....-RT"
                    },
                    {
                      "field" : "name",
                      "match" : "*-SN-......-RT"
                    },
                    {
                      "field" : "name",
                      "match" : "*-SN-.......-RT"
                    },
                    {
                      "field" : "name",
                      "match" : "*-SN-........-RT"
                    }
                  ]
                }
              ]
            }
          }
        ]
      },
      "then" : {
        "effect" : "[parameters('effect')]"
      }
    }
  }
}