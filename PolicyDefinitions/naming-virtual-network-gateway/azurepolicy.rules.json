{
  "if": {
    "allOf": [
      {
        "field": "type",
        "equals": "Microsoft.Network/virtualNetworkGateways"
      },
      {
        "not": {
          "allOf": [
            {
              "anyOf": [
                {
                  "field": "name",
                "match": "[resourceGroup().id]-VN-.-GW-*"
                },
                {
                  "field": "name",
                "match": "[resourceGroup().id]-VN-..-GW-*"
                },
                {
                  "field": "name",
                "match": "[resourceGroup().id]-VN-...-GW-*"
                },
                {
                  "field": "name",
                "match": "[resourceGroup().id]-VN-....-GW-*"
                },
                {
                  "field": "name",
                "match": "[resourceGroup().id]-VN-.....-GW-*"
                },
                {
                  "field": "name",
                "match": "[resourceGroup().id]-VN-......-GW-*"
                },
                {
                  "field": "name",
                "match": "[resourceGroup().id]-VN-.......-GW-*"
                },
                {
                  "field": "name",
                "match": "[resourceGroup().id]-VN-........-GW-*"
                }
              ]
            },
            {
              "anyOf": [
                {
                  "field": "name",
                  "match": "*-GW-."
                },
                {
                  "field": "name",
                  "match": "*-GW-.."
                },
                {
                  "field": "name",
                  "match": "*-GW-..."
                },
                {
                  "field": "name",
                  "match": "*-GW-...."
                },
                {
                  "field": "name",
                  "match": "*-GW-....."
                },
                {
                  "field": "name",
                  "match": "*-GW-......"
                },
                {
                  "field": "name",
                  "match": "*-GW-......."
                },
                {
                  "field": "name",
                  "match": "*-GW-........"
                }
              ]
            }
          ]
        }
      }
    ]
  },
  "then": {
  "effect": "[parameters('effect')]"
  }
}